{
    "name": "dlundgren/phagrancy",
    "description": "Private Vagrant Cloud",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "David Lundgren",
            "email": "dlundgren@syberisle.net"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.1",
        "josegonzalez/dotenv": "^3.2",
        "slim/slim": "^3.0",
        "validator/livr": "dev-master"
    },
    "autoload": {
        "psr-4" :{
            "Phagrancy\\":"src"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "Phagrancy\\":"tests/src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "<6 || ^7.2",
        "mikey179/vfsStream": "^1.6",
        "helmich/phpunit-psr7-assert": "^1 || ^3.1",
        "syberisle/mock-php-stream": "^1.0"
    },
    "scripts" : {
        "test": "vendor/bin/phpunit",
        "travis": "vendor/bin/phpunit --coverage-clover build/logs/clover.xml"
    }
}
